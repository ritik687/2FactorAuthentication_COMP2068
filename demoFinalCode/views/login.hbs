
{{#if messages}}
<div class="alert alert-danger">
    Invalid Credentials
</div>
{{else}}
<div class="alert alert-info">
    Please enter your Credentials
</div>
{{/if}}

<form method="post">
    <fieldset class="form-group">
        
        <input name="username" id="username" required  placeholder="Username"/>
    </fieldset>
    <fieldset class="form-group">
        
        <input name="password" id="password" type="password" required placeholder="Password" />
    </fieldset>
    <fieldset class="form-group">
        <button class="btn btn-info offset-0">Login</button>
        <hr />
        Need an account? <a href="/register" title="Register">Register</a>
    </fieldset>
</form>


